{
  "name": "@mfe-kit/dev-tools",
  "version": "0.0.1",
  "main": "dist/index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mfe-kit/dev-tools.git"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "prepare": "node .husky/install.mjs",
    "build": "node esbuild.config.js",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "lint": "eslint src",
    "check": "prettier --ignore-path .gitignore --check src",
    "check:fix": "prettier --ignore-path .gitignore --write src && eslint --fix src"
  },
  "peerDependencies": {
    "@hono/node-server": "^1.14.3",
    "highlight.js": "^11.11.1",
    "hono": "^4.7.10",
    "js-yaml": "^4.1.0",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "nunjucks": "^3.2.4",
    "vite": "^6.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "esbuild": "^0.25.8",
    "eslint": "^9.31.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2"
  }
}
