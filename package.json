{
  "name": "@mfe-kit/dev-tools",
  "version": "0.4.3",
  "main": "dist/playground-plugin/index.js",
  "types": "dist/types/index.d.ts",
  "type": "module",
  "bin": "./dist/setup-scripts/init.mjs",
  "exports": {
    ".": {
      "types": "./dist/types/playground-plugin.d.ts",
      "import": "./dist/playground-plugin/index.js"
    },
    "./eslint.config.js": {
      "types": "./dist/types/eslint.config.d.ts",
      "import": "./dist/configs/eslint.config.js"
    },
    "./prettier.config.js": {
      "types": "./dist/types/prettier.config.d.ts",
      "import": "./dist/configs/prettier.config.js"
    },
    "./vite.config.frontent.js": {
      "types": "./dist/types/vite.config.d.ts",
      "import": "./dist/configs/vite/vite.config.frontend.js"
    },
    "./vite.config.ssr.js": {
      "types": "./dist/types/vite.config.d.ts",
      "import": "./dist/configs/vite/vite.config.ssr.js"
    },
    "./tsconfig.base.json": "./dist/configs/tsconfig.base.json",
    "./manifest.schema.json": "./dist/configs/manifest.schema.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mfe-kit/dev-tools.git"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "prepare": "node .husky/install.mjs",
    "build": "rm -rf dist && node esbuild.config.js",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "lint": "eslint src",
    "check": "prettier --ignore-path .gitignore --check src",
    "check:fix": "prettier --ignore-path .gitignore --write src && eslint --fix src"
  },
  "dependencies": {
    "@eslint/js": "^9.33.0",
    "@hono/node-server": "^1.14.3",
    "eslint": "^9.31.0",
    "highlight.js": "^11.11.1",
    "hono": "^4.7.10",
    "js-yaml": "^4.1.0",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "nunjucks": "^3.2.4",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.37.0",
    "zx": "^8.8.1"
  },
  "devDependencies": {
    "esbuild": "^0.25.8",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "vite-plugin-static-copy": "^3.1.1",
    "vite": "^7.1.4"
  }
}
